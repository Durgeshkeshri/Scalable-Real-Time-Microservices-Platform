# ===========================================
# Environment Variables Configuration
# ===========================================
# Copy this file to .env and update with your values
# DO NOT commit .env to version control!

# -----------------
# Application Environment
# -----------------
NODE_ENV=development
# Options: development, production, staging

# -----------------
# API Service Configuration
# -----------------
API_SERVICE_PORT=3000
API_SERVICE_NAME=api-service

# -----------------
# Worker Service Configuration
# -----------------
WORKER_CONCURRENCY=100
# Number of concurrent jobs the worker can process (default: 100)
WORKER_NAME=worker-1
# Unique name for worker instance (useful for multiple workers)

# -----------------
# Notification Service Configuration
# -----------------
NOTIFICATION_SERVICE_PORT=4000
CORS_ORIGIN=*
# Comma-separated list of allowed origins, or * for all

# -----------------
# MongoDB Configuration
# -----------------
MONGODB_URI=mongodb://mongodb:27017/microservices_db
MONGO_INITDB_DATABASE=microservices_db
# Optional: Uncomment for authentication in production
# MONGO_INITDB_ROOT_USERNAME=admin
# MONGO_INITDB_ROOT_PASSWORD=your_secure_password

# -----------------
# Redis Configuration
# -----------------
REDIS_HOST=redis
REDIS_PORT=6379
# Optional: Uncomment for authentication in production
# REDIS_PASSWORD=your_redis_password

# -----------------
# Nginx Gateway Configuration
# -----------------
NGINX_PORT=80
NGINX_WORKER_CONNECTIONS=2048

# -----------------
# Service URLs (Internal Docker Network)
# -----------------
API_SERVICE_URL=http://api-service:3000
NOTIFICATION_SERVICE_URL=http://notification-service:4000
WORKER_SERVICE_URL=http://worker-service:3001

# -----------------
# Logging Configuration
# -----------------
LOG_LEVEL=info
# Options: error, warn, info, debug, trace

# -----------------
# Performance Tuning
# -----------------
MAX_CONNECTIONS=1000
REQUEST_TIMEOUT=30000
# Request timeout in milliseconds

# -----------------
# Task Queue Settings
# -----------------
QUEUE_NAME=tasks
MAX_RETRY_ATTEMPTS=3
RETRY_BACKOFF_DELAY=2000
# Retry delay in milliseconds

# -----------------
# Security Settings (Production)
# -----------------
# JWT_SECRET=your_jwt_secret_key_here
# API_KEY=your_api_key_here
# ENCRYPTION_KEY=your_encryption_key_here

# -----------------
# External Services (Optional)
# -----------------
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_email_password
# 
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# 
# SENDGRID_API_KEY=your_sendgrid_api_key

# -----------------
# Monitoring & Analytics (Optional)
# -----------------
# SENTRY_DSN=your_sentry_dsn
# NEW_RELIC_LICENSE_KEY=your_new_relic_key
# DATADOG_API_KEY=your_datadog_api_key

# -----------------
# Development Settings
# -----------------
DEBUG=false
ENABLE_SWAGGER=true
# Enable API documentation (development only)
